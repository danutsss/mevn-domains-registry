{
  "fpsLimit": 120,
  "fullScreen": {
    "enable": true
  },
  "interactivity": {
    "detectsOn": "window",
    "events": {
      "onClick": {
        "enable": false,
        "mode": "push"
      },
      "onHover": {
        "enable": false,
        "mode": "repulse"
      },
      "resize": true
    }
  },
  "particles": {
    "color": {
      "value": "#000"
    },
    "collisions": {
      "enable": true
    },
    "move": {
      "direction": "none",
      "enable": true,
      "outMode": "bounce",
      "random": false,
      "speed": 0.5,
      "straight": false
    },
    "number": {
      "density": {
        "enable": true,
        "area": 420
      },
      "value": 420
    },
    "opacity": {
      "value": 0.5
    },
    "shape": {
      "type": "circle"
    },
    "size": {
      "value": 0.3
    }
  },
  "detectRetina": true
}
